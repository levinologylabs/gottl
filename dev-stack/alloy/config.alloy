logging {
  level  = "debug"
  format = "logfmt"
}

// collect gottl logs from file
local.file_match "gottl" {
     path_targets = [{"__path__" = "/logs/gottl.dev.log"}]
     sync_period = "1s"
 }

loki.source.file "log_scrape" {
  targets    = local.file_match.gottl.targets
  forward_to = [loki.process.gottl.receiver]
  tail_from_end = true
}

loki.process "gottl" {
  stage.static_labels {
    values = {
      app = "gottl",
      container = "gottl",
    }
  }
  forward_to = [loki.write.grafana_loki.receiver]
}


// collect container logs from docker socket
discovery.docker "linux" {
  host = "unix:///var/run/docker.sock"
}

loki.source.docker "default" {
  host       = "unix:///var/run/docker.sock"
  targets    = discovery.docker.linux.targets
  relabel_rules = loki.relabel.docker.rules
  labels     = {"app" = "docker"}
  forward_to = [loki.relabel.docker.receiver]
}

loki.relabel "docker" {
  rule {
    action = "replace"
    regex = "/(.*)"
    source_labels = ["__meta_docker_container_name"]
    target_label = "container"
  }

  rule {
    action = "replace"
    source_labels = ["__meta_docker_container_log_stream"]
    target_label = "logstream"
  }

  rule {
    action = "replace"
    source_labels = ["__meta_docker_container_label_logging_jobname"]
    target_label = "job"
  }

  forward_to = [loki.write.grafana_loki.receiver]
}

// loki writer
loki.write "grafana_loki" {
  endpoint {
    url = "http://loki:3100/loki/api/v1/push"
  }
}

// gottl otel collector
otelcol.receiver.otlp "default" {
    grpc { }

    http { }

    output {
        metrics = [otelcol.processor.memory_limiter.default.input]
        traces  = [otelcol.processor.memory_limiter.default.input]
    }
}

otelcol.processor.memory_limiter "default" {
    check_interval   = "1s"
    limit_percentage = 90
    spike_limit_percentage = 20

    output {
        //metrics = [otelcol.exporter.prometheus.default.input]
        traces  = [otelcol.exporter.otlp.tempo.input]
    }
}

otelcol.exporter.otlp "tempo" {
    client {
        endpoint = "tempo:4317"
        tls {
          insecure = true
        }
    }
}



